<%- include("partials/header") %>

<h2 class="title is-2"> <%= postTitle %> </h2>
<div class="content message is-dark">
    <p class = "message-body"> <%= postContent %> </p>
    <div class = "post-footer">
        <p class="message-header help" >By <%= postBy+". "+postTime %> </p>
    </div>
</div>

<% if (createdBy === session) { %>
    <div class = "delete-button">
        <button class="button is-primary is-right" >
            <%- '<a href="/post/'+ id +'/delete">Delete</a>' %>
        </button>
    </div>
<% } %>

<%- include("partials/footer") %>